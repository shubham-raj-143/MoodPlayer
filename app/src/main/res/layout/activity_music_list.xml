<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_bg"
    android:orientation="vertical"
    tools:context=".MusicList">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/toolbar_animation"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:theme="@style/MyActionBarTheme"
        app:titleTextColor="@color/white" />
    <TextView
        android:id="@+id/textv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:fontFamily="@font/allerta_stencil"
        android:paddingTop="8dp"
        android:text="Playlist"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/icon"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <ListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"
        android:layout_height="525dp"

        android:background="#80403F3D"
        android:choiceMode="singleChoice"
        android:listSelector="@color/yellow"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/jcplayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textv"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.jean.jcplayer.view.JcPlayerView
        android:id="@+id/jcplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:background="@android:color/transparent"
        app:next_icon="@drawable/ic_next"
        app:next_icon_color="@color/icon"
        app:pause_icon="@drawable/ic_pause"
        app:pause_icon_color="@color/icon"
        app:play_icon="@drawable/ic_play"
        app:play_icon_color="@color/icon"
        app:previous_icon="@drawable/ic_previous"
        app:previous_icon_color="@color/icon"
        app:progress_color="@color/icon"
        app:random_icon_color="@color/icon"
        app:repeat_icon = "@drawable/ic_repeat"
        app:repeat_icon_color="@color/icon"
        app:seek_bar_color="@color/icon"
        app:text_audio_current_duration_color="@color/icon"
        app:text_audio_duration_color="@color/icon"
        app:text_audio_title_color="@color/icon"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>